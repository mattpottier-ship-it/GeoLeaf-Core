{
  "id": "cultures",
  "label": "Cultures",
  "zIndex": 99,
  "geometry": "point",
  "interactiveShape": true,
  "showIconsOnMap": true,
  "data": {

    "directory": "data",
    "file": "cultures.geojson"
  },

  "styles": {
    "directory": "styles",
    "default": "defaut.json",
    "available": [
      {
        "id": "defaut",
        "label": "défaut",
        "file": "defaut.json"
      }
    ]
  },

  "tooltip": {
    "mode": "hover",
    "fields": [
      {
        "type": "text",
        "field": "properties.NAME"
      }
    ]
  },

  "popup": {
    "enabled": true,
    "fields": [
      {
        "type": "text",
        "field": "properties.name",
        "variant": "title"
      },
      {
        "type": "text",
        "label": "Type",
        "field": "properties.fclass"
      },
      {
        "type": "badge",
        "label": "Catégorie",
        "field": "properties.categoryId"
      },
      {
        "type": "badge",
        "label": "Sous-catégorie",
        "field": "properties.subcategoryId"
      }
    ]
  },

  "sidepanel": {
    "enabled": true,
    "detailLayout": [
      {
        "type": "image",
        "label": "Image principale",
        "field": "attributes.photo",
        "variant": "hero",
        "accordion": false,
        "defaultOpen": false
      },
      {
        "type": "badge",
        "label": "Catégorie",
        "field": "properties.categoryId",
        "style": "category",
        "accordion": false,
        "defaultOpen": false
      },
      {
        "type": "badge",
        "label": "Sous-catégorie",
        "field": "properties.subCategoryId",
        "style": "subcategory",
        "accordion": false,
        "defaultOpen": false
      },
            {
        "type": "text",
        "label": "Nom",
        "field": "properties.Name",
        "style": "title",
        "accordion": false,
        "defaultOpen": false
      },
      {
        "type": "text",
        "label": "Résumé",
        "field": "properties.short_desc",
        "variant": "multiline",
        "accordion": true,
        "defaultOpen": true
      },
            {
        "type": "list",
        "label": "Informations",
        "field": "properties.informations",
        "listStyle": "bullet",
        "accordion": true,
        "defaultOpen": false
      },
      {
        "type": "list",
        "label": "Points forts",
        "field": "properties.highlights",
        "listStyle": "bullet",
        "accordion": true,
        "defaultOpen": false
      },
      {
        "type": "gallery",
        "label": "Galerie photos",
        "field": "attributes.gallery",
        "accordion": true,
        "defaultOpen": false
      },
      {
        "type": "link",
        "label": "Site officiel",
        "field": "properties.link_official",
        "iconId": "link_external",
        "accordion": false,
        "defaultOpen": false
      },
      {
        "type": "link",
        "label": "Wikipedia",
        "field": "properties.link_wikipedia",
        "iconId": "link_external",
        "accordion": false,
        "defaultOpen": false
      },
      {
        "type": "tags",
        "label": "Tags",
        "field": "properties.tags",
        "accordion": false,
        "defaultOpen": false
      }
    ]
  },

  "search": {
    "enabled": true,
    "indexingFields": [
      "properties.name",
      "properties.fclass"
    ]
  },

  "table": {
    "enabled": true,
    "columns": [
      {
        "field": "properties.name",
        "label": "Nom",
        "sortable": true,
        "width": "40%"
      },
      {
        "field": "properties.fclass",
        "label": "Type",
        "sortable": true,
        "width": "20%"
      },
      {
        "field": "properties.categoryId",
        "label": "Catégorie",
        "sortable": true,
        "width": "20%"
      },
      {
        "field": "properties.subcategoryId",
        "label": "Sous-catégorie",
        "sortable": true,
        "width": "20%"
      }
    ],
    "searchFields": [
      "properties.name"
    ],
    "defaultSort": {
      "field": "properties.name",
      "order": "asc"
    }
  },

  "clustering": {
    "enabled": true,
    "maxClusterRadius": 80,
    "disableClusteringAtZoom": 12
  }
}
