{
  "id": "tourism",
  "label": "Profil tourisme",
  "description": "Profil optimisé pour les POI touristiques (hébergements, activités, nature…). Version 3.0 avec structure modulaire.",
  "version": "3.0.0",

  "map": {
    "bounds": [[-58.39, -73.58], [-21.78, -34.67]],
    "maxZoom": 12,
    "padding": [50, 50]
  },

  "Files": {
    "taxonomyFile": "taxonomy.json",
    "themesFile": "themes.json",
    "layersFile": "layers.json"
  },

  "ui": {
    "theme": "light",
    "language": "fr",
    "showBaseLayerControls": false,
    "showLayerManager": true,
    "showFilterPanel": true,
    "enableGeolocation": true,
    "showCoordinates": true,
    "showThemeSelector": true,
    "showLegend": true,
    "showCacheButton": false,
    "showAddPoi": false,
    "showTable": false
  },

  "performance": {
    "maxConcurrentLayers": 10,
    "layerLoadDelay": 200,
    "fitBoundsOnThemeChange": false
  },

  "basemaps": {
    "street": {
      "id": "street",
      "label": "Street",
      "url": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
      "attribution": "&copy; <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors",
      "minZoom": 5,
      "maxZoom": 19,
      "defaultBasemap": true,
      "offline": true,
      "offlineBounds": {
        "north": -22.0,
        "south": -56.0,
        "east": -53.5,
        "west": -73.5
      },
      "cacheMinZoom": 4,
      "cacheMaxZoom": 12
    },
    "satellite": {
      "id": "satellite",
      "label": "Satellite",
      "url": "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}",
      "attribution": "Tiles &copy; Esri &mdash; Source: Esri, i-cubed, USDA, USGS, AEX, GeoEye, Getmapping, Aerogrid, IGN, IGP, UPR-EGP, and the GIS User Community",
      "minZoom": 5,
      "maxZoom": 18,
      "offline": false
    },
    "topo": {
      "id": "topo",
      "label": "Topographique",
      "url": "https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png",
      "attribution": "Map data: &copy; <a href='https://www.openstreetmap.org/copyright'>OpenStreetMap</a> contributors, <a href='http://viewfinderpanoramas.org'>SRTM</a> | Map style: &copy; <a href='https://opentopomap.org'>OpenTopoMap</a> (<a href='https://creativecommons.org/licenses/by-sa/3.0/'>CC-BY-SA</a>)",
      "minZoom": 5,
      "maxZoom": 17,
      "offline": false
    }
  },

  "search": {
    "title": "Filtrer",
    "radiusMin": 1,
    "radiusMax": 50,
    "radiusStep": 1,
    "radiusDefault": 10,
    "searchPlaceholder": "Rechercher un POI…",
    "filters": [
      {
        "id": "searchText",
        "type": "search",
        "label": "Recherche textuelle",
        "placeholder": "Rechercher...",
        "searchFields": ["title", "properties.name", "description", "attributes.description_long", "properties.description_long"]
      },
      {
        "id": "proximity",
        "type": "proximity",
        "label": "Recherche par proximité",
        "buttonLabel": "Activer",
        "instructionText": "Cliquez sur la carte pour définir le point central"
      },
      {
        "id": "categories",
        "type": "tree",
        "label": "Catégories"
      },
      {
        "id": "tags",
        "type": "multiselect-tags",
        "label": "Tags",
        "field": "attributes.tags"
      }
    ],
    "actions": {
      "applyLabel": "Appliquer",
      "resetLabel": "Réinitialiser"
    }
  },

  "layerManagerConfig": {
    "title": "Couches",
    "collapsedByDefault": true,
    "sections": [
      {
        "id": "data-tourism",
        "label": "Données touristiques",
        "order": 1,
        "collapsedByDefault": false
      },
      {
        "id": "data-climate",
        "label": "Données climatiques",
        "order": 2,
        "collapsedByDefault": true
      },
      {
        "id": "data-conservation",
        "label": "Environnement",
        "order": 3,
        "collapsedByDefault": true
      },
        {
        "id": "data-administration",
        "label": "Découpage administratif",
        "order": 4,
        "collapsedByDefault": true
      },
      {
        "id": "basemap",
        "label": "Fonds de carte",
        "order": 5,
        "collapsedByDefault": true
      }
    ]
  },

  "legendConfig": {
    "title": "Légende",
    "collapsedByDefault": true,
    "position": "bottomleft"
  },

  "clusteringConfig": {
    "enabled": true,
    "strategy": "by-layer",
    "maxClusterRadius": 80,
    "disableClusteringAtZoom": 12
  },

  "poiConfig": {
    "enabled": false,
    "clustering": true,
    "clusterStrategy": "by-layer",
    "clusterRadius": 80,
    "disableClusteringAtZoom": 12
  },

  "brandingConfig": {
    "enabled": true,
    "text": "Propulsé par © GeoLeaf with Leaflet - Données © OpenStreetMap contributors",
    "position": "bottomleft"
  },

  "tableConfig": {
    "enabled": true,
    "defaultVisible": false,
    "pageSize": 50,
    "maxRowsPerLayer": 1000,
    "enableExportButton": true,
    "virtualScrolling": true,
    "defaultHeight": "40%",
    "minHeight": "20%",
    "maxHeight": "60%",
    "resizable": true
  },

  "scaleConfig": {
    "scaleGraphic": true,
    "scaleNumeric": true,
    "scaleNumericEditable": true,
    "scaleNivel": true,
    "position": "bottomleft"
  },

  "storage": {
    "enableOfflineDetector": false,
    "enableServiceWorker": false,
    "cache": {
      "enableProfileCache": true,
      "enableTileCache": true
    }
  },

  "poiAddConfig": {
    "enabled": true,
    "defaultPosition": "geolocation"
  }

}
