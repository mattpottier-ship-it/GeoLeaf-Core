{
    "name": "@geoleaf/core",
    "version": "4.0.0",
    "description": "GeoLeaf â€” Modular JavaScript mapping library built on Leaflet. v4.0: Full ESM migration, tree-shaking, selective imports. Features: Security (XSS protection), Performance (optimized build pipeline), Typed Errors, Validators, and comprehensive TypeScript support.",
    "type": "module",
    "main": "dist/geoleaf.umd.js",
    "module": "dist/geoleaf.esm.js",
    "unpkg": "dist/geoleaf.min.js",
    "jsdelivr": "dist/geoleaf.min.js",
    "types": "index.d.ts",
    "browser": "dist/geoleaf.umd.js",
    "exports": {
        ".": {
            "import": "./dist/geoleaf.esm.js",
            "require": "./dist/geoleaf.umd.js",
            "types": "./index.d.ts"
        }
    },
    "sideEffects": [
        "src/modules/globals.js",
        "src/modules/globals.core.js",
        "src/modules/globals.config.js",
        "src/modules/globals.geojson.js",
        "src/modules/globals.ui.js",
        "src/modules/globals.poi.js",
        "src/modules/globals.api.js",
        "src/modules/geoleaf.api.js",
        "src/modules/config/geoleaf-config/*.js",
        "src/app/helpers.js",
        "src/app/init.js",
        "src/app/boot.js",
        "src/app/init-feature-modules.js",
        "src/lazy/*.js",
        "src/bundle-entry.js",
        "src/bundle-esm-entry.js",
        "**/*.css"
    ],
    "scripts": {
        "build": "rollup -c",
        "build:watch": "rollup -c -w",
        "clean": "rimraf dist",
        "test": "node ../../scripts/smoke-test.cjs",
        "test:jest": "jest --config jest.config.cjs",
        "test:coverage": "jest --config jest.config.cjs --coverage --coverageDirectory=coverage",
        "test:ci": "npm run test:coverage",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "format": "prettier --write \"src/**/*.js\" \"*.{json,md}\"",
        "build:css": "postcss src/css/geoleaf-main.css -o dist/geoleaf-main.min.css --map",
        "build:all": "npm run clean && npm run build && npm run build:css"
    },
    "peerDependencies": {
        "@maplibre/maplibre-gl-leaflet": "^0.1.3",
        "leaflet": "^1.9.4",
        "leaflet.markercluster": "^1.5.3",
        "leaflet.vectorgrid": "^1.3.0",
        "maplibre-gl": "^5.0.0"
    },
    "peerDependenciesMeta": {
        "leaflet.vectorgrid": {
            "optional": true
        },
        "maplibre-gl": {
            "optional": true
        },
        "@maplibre/maplibre-gl-leaflet": {
            "optional": true
        }
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^6.0.0",
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-replace": "^6.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@testing-library/dom": "^10.4.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@types/jest": "^29.5.12",
        "cssnano": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-security": "^3.0.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "postcss-import": "^16.1.1",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "rollup": "^4.12.0",
        "rollup-plugin-filesize": "^10.0.0",
        "rollup-plugin-visualizer": "^6.0.5"
    },
    "files": [
        "dist/",
        "index.d.ts",
        "README.md",
        "docs/"
    ],
    "keywords": [
        "leaflet",
        "map",
        "mapping",
        "gis",
        "geospatial",
        "frontend",
        "geoleaf",
        "geojson",
        "gpx",
        "security",
        "xss-protection",
        "typescript",
        "performance"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/mattpottier-ship-it/GeoLeaf-Core.git"
    },
    "bugs": {
        "url": "https://github.com/mattpottier-ship-it/GeoLeaf-Core/issues"
    },
    "homepage": "https://geoleaf.dev",
    "author": "GeoLeaf Project",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    }
}
